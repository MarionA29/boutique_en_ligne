<div class="container">
<div class="row">
  <div class="col-5">
    <%=  if @item.picture.attached? ==true
    image_tag @item.picture, width: 300, alt: 'avatar' end  %>
  </div>
  <div class="col-4">
    <br>
    <h2><%= @item.title %></h2>
    <br>
    <h5><%= @item.description %></h5>
    <br>
    <h6>Price : <%= @item.price %></h6>
    <br>
  </div>
</div>
</div>
