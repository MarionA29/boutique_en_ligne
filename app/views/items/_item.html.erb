<div class="card mb-3 " style="width: 18rem;">
  <h3 class="card-header"><%= item.title %></h3>
  <% if item.picture.attached? ==true %>
  <img class="w-100" display: block" <%= image_tag  item.picture, alt: 'picture' %>
  <% end %>
  <div class="card-body">
    <p class="card-text"><%= item.description %></p>
    <p class="card-text"><%= item.price %></p>
  </div>
  <div class="card-body">
    <a href="#" class="card-link"><a href="/items/<%= item.id %>">Voir le detail</a>
    <% if current_user != nil %>
    <%= link_to "Ajouter au panier", cart_items_path(cart_id: Cart.find_by(user_id: current_user.id), item_id: item.id), class:"card-link", method: :post %>
    <% end %>
  </div>
</div>
